extends layout
block content
    include header
    .col-sm-2
        ul.nav.nav-pills.nav-stacked(style='background-color:#F8F8FF; margin-top:20px')
            ul.nav.nav-pills.nav-stacked.nav-pills-stacked-example
                li(role='presentation')
                    a(href='/home') Home
                li.active(role='presentation')
                    a(href='/employee') Employee management
                li(role='presentation')
                    a(href='/department') Department management
                li(role='presentation')
                    a(href='/user') User
    .col-sm-10
        h2 EMPLOYEE MANAGEMENT
        ol.breadcrumb(style='margin-top:25px')
            li
                a(href='/home') Home
            li
                a(href='/employee') Employee management
            li.active Edit employee
        form(style='width:300px')
            include messages
        form#editEmployee.form.form-inline(action='/editEmployee/#{employee._id}' method='post')
            | Full name: 
            br
            input#inputUserName.form-control(type='text', name='employeename', style='width: 300px', value="#{employee.employeename}")
            br
            | Gender:
            br
            select.form-control(name ='gender', style='width: 300px', value="#{employee.gender}")
                option Male
                option Female
            br
            | Position:
            br
            select.form-control(name ='position', style='width: 300px', value="#{employee.position}")
                option Manager
                option Vice manager
                option Staff
            br
            | Department:
            br
            select.form-control(name ='department', style='width: 300px', value="#{employee.department}")
                each department, i in departmentlist
                    option #{department.name}
            br
            
            | Email: 
            br
            input#inputUserName.form-control(type='text', name='email', style='width: 300px', value="#{employee.email}")
            br
            button.btn.btn-success(type='submit' style='margin-top:10px') Edit
            a(href='/employee' style='margin-left:10px')
                button.btn.btn-default(type='button' style='margin-top:10px') Cancel


